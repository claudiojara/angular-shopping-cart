{
  "tech_stack": [
    "TypeScript 5.9.2",
    "Angular 20.3.0",
    "Angular Material 20.2.14",
    "Supabase 2.94.1",
    "PostgreSQL",
    "RxJS 7.8.0",
    "SCSS",
    "Jasmine 5.9.0",
    "Karma 6.4.0"
  ],
  "features": [
    {
      "name": "User Authentication",
      "description": "Sistema completo de autenticación con registro, login y logout usando Supabase Auth",
      "files": [
        "src/app/services/supabase.service.ts",
        "src/app/components/login/login.ts",
        "src/app/components/register/register.ts",
        "src/environments/environment.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Authentication API",
          "version": "1.0.0"
        },
        "paths": {
          "/auth/signup": {
            "post": {
              "summary": "Register a new user",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "format": "email"
                        },
                        "password": {
                          "type": "string",
                          "minLength": 6
                        }
                      },
                      "required": ["email", "password"]
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "User registered successfully"
                },
                "400": {
                  "description": "Invalid input"
                }
              }
            }
          },
          "/auth/signin": {
            "post": {
              "summary": "Sign in user",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "format": "email"
                        },
                        "password": {
                          "type": "string"
                        }
                      },
                      "required": ["email", "password"]
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "User signed in successfully"
                },
                "401": {
                  "description": "Invalid credentials"
                }
              }
            }
          },
          "/auth/signout": {
            "post": {
              "summary": "Sign out user",
              "responses": {
                "200": {
                  "description": "User signed out successfully"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Product Catalog",
      "description": "Catálogo de productos con 6 productos pre-cargados, mostrando nombre, descripción, precio, imagen y categoría",
      "files": [
        "src/app/services/product.service.ts",
        "src/app/components/product-list/product-list.ts",
        "src/app/models/product.model.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Product Catalog API",
          "version": "1.0.0"
        },
        "paths": {
          "/products": {
            "get": {
              "summary": "Get all products",
              "responses": {
                "200": {
                  "description": "List of products",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            },
                            "description": {
                              "type": "string"
                            },
                            "price": {
                              "type": "number"
                            },
                            "image": {
                              "type": "string"
                            },
                            "category": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "/products/{id}": {
            "get": {
              "summary": "Get product by ID",
              "parameters": [
                {
                  "name": "id",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "number"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Product details"
                },
                "404": {
                  "description": "Product not found"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Shopping Cart",
      "description": "Sistema de carrito de compras con persistencia en Supabase, optimistic updates, cálculo de totales y gestión de cantidades",
      "files": [
        "src/app/services/cart.service.ts",
        "src/app/components/cart/cart.ts",
        "src/app/models/cart-item.model.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Shopping Cart API",
          "version": "1.0.0"
        },
        "paths": {
          "/cart/items": {
            "get": {
              "summary": "Get cart items for current user",
              "responses": {
                "200": {
                  "description": "List of cart items",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "user_id": {
                              "type": "string"
                            },
                            "product_id": {
                              "type": "number"
                            },
                            "quantity": {
                              "type": "number"
                            },
                            "created_at": {
                              "type": "string",
                              "format": "date-time"
                            },
                            "updated_at": {
                              "type": "string",
                              "format": "date-time"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "post": {
              "summary": "Add item to cart",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "product_id": {
                          "type": "number"
                        },
                        "quantity": {
                          "type": "number"
                        }
                      },
                      "required": ["product_id", "quantity"]
                    }
                  }
                }
              },
              "responses": {
                "201": {
                  "description": "Item added to cart"
                },
                "400": {
                  "description": "Invalid input"
                }
              }
            },
            "delete": {
              "summary": "Clear all cart items",
              "responses": {
                "200": {
                  "description": "Cart cleared successfully"
                }
              }
            }
          },
          "/cart/items/{product_id}": {
            "patch": {
              "summary": "Update item quantity",
              "parameters": [
                {
                  "name": "product_id",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "number"
                  }
                }
              ],
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "quantity": {
                          "type": "number"
                        }
                      },
                      "required": ["quantity"]
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Quantity updated"
                },
                "404": {
                  "description": "Item not found"
                }
              }
            },
            "delete": {
              "summary": "Remove item from cart",
              "parameters": [
                {
                  "name": "product_id",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "number"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Item removed"
                },
                "404": {
                  "description": "Item not found"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Navigation and Routing",
      "description": "Sistema de navegación con rutas para productos, carrito, login y registro. Incluye toolbar con badge dinámico y menú de usuario",
      "files": [
        "src/app/app.routes.ts",
        "src/app/app.ts",
        "src/app/app.html"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Navigation API",
          "version": "1.0.0"
        },
        "paths": {
          "/": {
            "get": {
              "summary": "Root path - redirects to /products",
              "responses": {
                "302": {
                  "description": "Redirect to products"
                }
              }
            }
          },
          "/products": {
            "get": {
              "summary": "Product listing page",
              "responses": {
                "200": {
                  "description": "Products page"
                }
              }
            }
          },
          "/cart": {
            "get": {
              "summary": "Shopping cart page",
              "responses": {
                "200": {
                  "description": "Cart page"
                }
              }
            }
          },
          "/login": {
            "get": {
              "summary": "Login page",
              "responses": {
                "200": {
                  "description": "Login page"
                }
              }
            }
          },
          "/register": {
            "get": {
              "summary": "Registration page",
              "responses": {
                "200": {
                  "description": "Registration page"
                }
              }
            }
          }
        }
      }
    }
  ]
}
